@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Tee.FamilyApp.Common.Models.InviteViewModel

    <h2>Send Invitation</h2>
    @using (Html.BeginForm("SendInvite", "Invite", FormMethod.Post, new { id = "invitationForm", @class = "form" }))
    {
        <div>
            <div class="form-group">
                @Html.LabelFor(model => model.Email)
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.LinkType)
                @Html.EnumDropDownListFor(model => model.LinkType, new { @class = "form-control" })
            </div>

            <button id="submitForm" type="submit" class="btn btn-default">Send Invite</button>
        </div>
    }